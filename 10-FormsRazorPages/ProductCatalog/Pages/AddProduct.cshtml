@page
@model AddProductModel
@{
    ViewData["Title"] = "Adicionar Produto";
}

<h2>Novo Produto</h2>

<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label">Nome do Produto</label>
                <input asp-for="Name" class="form-control"/>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Price" class="control-label">Preço</label>
                <input asp-for="Price" class="form-control" type="number" step="0.01" />
            </div>

            <button type="submit" class="btn btn-primary">Cadastrar</button>
        </form>
    </div>

    <div class="col-md-7 offset-md-1">
        <h4>Itens no Catálogo</h4>

        @if (Model.ProductList.Any())
        {
            <table class="table table-striped mt-3">
                <thead class="thead-dark">
                    <tr>
                        <th>Produto</th>
                        <th>Preço</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ProductList)
                    {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Price.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-info">Nenhum produto adicionado ainda.</div>
        }
    </div>
</div>